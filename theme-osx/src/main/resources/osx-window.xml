	<bean id="fileChooser" class="kkckkc.jsourcepad.theme.GtkFileChooserView" />
	
	<bean id="windowView" class="kkckkc.jsourcepad.theme.GtkWindowViewImpl" />
 -->
 
	<bean id="docView" class="kkckkc.jsourcepad.theme.OsxDocViewImpl" />
	<bean id="docListView" class="kkckkc.jsourcepad.theme.OsxDocListViewImpl" />
 	<bean id="projectView" class="kkckkc.jsourcepad.theme.OsxProjectViewImpl" />
	<bean id="windowView" class="kkckkc.jsourcepad.theme.OsxWindowViewImpl" />
	
	<bean id="fileChooser" class="kkckkc.jsourcepad.theme.AWTFileChooserView" />

    <bean id="action-group-file-menu" parent="action-group">
		<property name="items">
			<list>
                <ref local="action-file-new" />
				<ref local="action-file-open" />
				<null />

				<ref local="action-window-close" />
				<ref local="action-tab-close" />
				<ref local="action-file-save" />
				<ref local="action-file-save-as" />
				<ref local="action-file-save-all" />
				<null />

				<ref local="action-window-new" />
				<ref local="action-file-reveal-in-project" />
			</list>
		</property>
	</bean>

</beans>
